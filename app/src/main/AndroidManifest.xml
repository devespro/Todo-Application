<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deves.maus">

    <!-- this permission is required to create an outgoing http connection to the webapp -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <!-- this permission is required to create an outgoing http connection to the webapp -->
        <!--<uses-permission android:name="android.permission.INTERNET"/>-->

        <activity android:name="de.fhb.fbi.acs.maas.todoapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="de.fhb.fbi.acs.maas.todoapp.ItemDetailsActivity"/>

        <activity android:name="de.fhb.fbi.acs.maas.todoapp.TodoActivity"/>
    </application>

</manifest>
